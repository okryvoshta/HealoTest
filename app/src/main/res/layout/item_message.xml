<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/CardMargin"
    android:layout_marginEnd="@dimen/CardMargin"
    android:layout_marginBottom="@dimen/CardMargin"
    app:cardBackgroundColor="@color/card_color"
    app:cardCornerRadius="@dimen/CardRadius"
    app:elevation="@dimen/CardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userLogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:background="@drawable/user_circle_bg"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/userIdTextSize"
            tools:text="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/titleTextSize"
                android:textStyle="bold"
                tools:text="title" />

            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/bodyTextSize"
                tools:text="body" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>